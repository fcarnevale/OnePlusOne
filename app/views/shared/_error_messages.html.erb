<% if object.errors.any? %>
  <div class="alert alert-error">
    <button type="button" class="close" data-dismiss="alert">x</button>

    <h4>this person did not save because:</h4>

    <ul>

    <% object.errors.full_messages.each do |msg| %>

      <li><%= msg %></li>

    <% end %>

    </ul>

  </div>
<% end %>